<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Checkbox for Existing Patient -->
        <CheckBox
            android:id="@+id/checkBoxExistingPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you diagnosed this patient before?" />

        <!-- Search Field (Initially Disabled) -->
        <EditText
            android:id="@+id/etSearchPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search existing patient"
            android:enabled="false"
            android:inputType="textPersonName"/>

        <!-- Patient Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <!-- Patient Name Input Field -->
        <EditText
            android:id="@+id/etPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Patient Name"
            android:inputType="textPersonName"
            android:padding="8dp"/>

        <!-- Diagnosis Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <!-- Diagnosis Input Field -->
        <EditText
            android:id="@+id/etDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Diagnosis"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="8dp"/>



        <!-- Date Field with Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:padding="10dp"
            android:background="@android:color/darker_gray"/>

        <!-- Time Field with Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:padding="10dp"
            android:background="@android:color/darker_gray"/>

        <!-- Save Button at Bottom -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="20dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>